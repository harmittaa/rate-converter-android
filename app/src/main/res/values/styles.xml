<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RobotoText">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="PrimaryText" parent="RobotoText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/primaryBlack</item>
    </style>

    <style name="SecondaryText" parent="RobotoText">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/primaryGrey</item>
    </style>

    <style name="TitleText" parent="RobotoText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryBlack</item>
    </style>

</resources>
